<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/material_dynamic_neutral90"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <com.google.android.material.textfield.TextInputEditText

        android:id="@+id/editText4"
        android:layout_width="413dp"
        android:layout_height="42dp"
        android:layout_marginBottom="216dp"
        android:background="@drawable/circle"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textInputEditText"
        tools:layout_editor_absoluteX="1dp" />

    <com.google.android.material.textfield.TextInputEditText

        android:id="@+id/editText3"
        android:layout_width="272dp"
        android:layout_height="47dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/circle"
        android:ellipsize="end"
        android:hint="Email address"
        android:maxLines="1"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textInputEditText"
        tools:layout_editor_absoluteX="69dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/variant2"
        android:padding="20dp"
        android:text="LOGO"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094" />

    <Button
        android:id="@+id/loginBackToMainBtn"
        android:layout_width="193dp"
        android:layout_height="50dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/variant1"

        android:text="Login"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/loginBackToMainBtn3"
        android:layout_width="150dp"
        android:layout_height="41dp"
        android:layout_marginBottom="120dp"

        android:background="@drawable/variant2"
        android:text="Facebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.246"
        app:layout_constraintStart_toEndOf="@+id/loginBackToMainBtn2" />

    <Button
        android:id="@+id/loginBackToMainBtn2"
        android:layout_width="150dp"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"

        android:layout_marginBottom="120dp"
        android:background="@drawable/variant2"
        android:text="Google"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?  "
        android:textColor="@color/material_dynamic_neutral30"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="656dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Sign Up "
        android:textColor="#050505"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        tools:layout_editor_absoluteY="656dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password? "
        android:textColor="@color/material_dynamic_neutral30"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="334dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="533dp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="5dp"
        app:boxCornerRadiusTopStart="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="1.0"
        app:layout_goneMarginEnd="16dp"
        app:layout_goneMarginStart="16dp">

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText

        android:id="@+id/textInputEditText"
        android:layout_width="272dp"
        android:layout_height="47dp"
        android:background="@drawable/circle"
        android:ellipsize="end"
        android:hint="Password"
        android:maxLines="1"
        android:paddingLeft="20dp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="255dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="540dp" />

</androidx.constraintlayout.widget.ConstraintLayout>